<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:background="@color/lib_style_white"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/rate_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="整体好评率" />

            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="15dp">
                <ProgressBar
                    android:id="@+id/rate_all_pb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@android:color/transparent"
                    android:max="100"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/custom_horizontal_progress_drawable" />
                <TextView
                    android:id="@+id/rate_all_rtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginBottom="2dp"
                    android:text="50%"/>
            </RelativeLayout>


            <RatingBar
                android:id="@+id/ratingbar_all"
                style="@style/MyRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4.6"
                android:stepSize="0.05" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/rate_deliver_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="送货好评率" />

            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="15dp">
                <ProgressBar
                    android:id="@+id/rate_deliver_pb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@android:color/transparent"
                    android:max="100"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/custom_horizontal_progress_drawable" />
                <TextView
                    android:id="@+id/rate_deliver_rtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginBottom="2dp"
                    android:text="50%"/>
            </RelativeLayout>


            <RatingBar
                android:id="@+id/ratingbar_deliver"
                style="@style/MyRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4.2"
                android:stepSize="0.05" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/rate_install_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="安装好评率" />

            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="15dp">
                <ProgressBar
                    android:id="@+id/rate_install_pb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@android:color/transparent"
                    android:max="100"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/custom_horizontal_progress_drawable" />
                <TextView
                    android:id="@+id/rate_install_rtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginBottom="2dp"
                    android:text="50%"/>
            </RelativeLayout>

            <RatingBar
                android:id="@+id/ratingbar_install"
                style="@style/MyRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4.8"
                android:stepSize="0.05" />

        </TableRow>

    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/discuz_post_ll"
        android:background="#eef2f3" />
</LinearLayout>
