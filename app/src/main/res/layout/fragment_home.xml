<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/home_tip_img"
        android:layout_marginTop="150dp"
        android:src="@drawable/home_nodevice"/>

    <TextView
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/home_tip_img"
        android:id="@+id/home_tip_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Please add a new device to setting page"/>

    <in.srain.cube.views.loadmore.LoadMoreListViewContainer xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_load_more_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#fafafa"
            android:dividerHeight="10dp"
            android:scrollbars="none" />
    </in.srain.cube.views.loadmore.LoadMoreListViewContainer>

</RelativeLayout>
